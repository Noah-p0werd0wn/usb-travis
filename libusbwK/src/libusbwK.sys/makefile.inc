_LNG=$(LANGUAGE)
_CMD_TAGEV=$(DCMD) -et
INF_TEMPLATE=.\$(INF_NAME).inf.in
INF_PREVIEW_TEMPLATE=.\$(INF_PREVIEW_NAME).inf.in

$(OBJ_PATH)\$(O)\$(INF_NAME).inf: $(INF_TEMPLATE)
	$(_CMD_TAGEV) $(INF_TEMPLATE) $@
	COPY /Y $@ "$(G_TARGET_OUTPUT_ABS_DIR)\$(G_TARGET_OUTPUT_ARCH)\$(INF_NAME).inf"

$(OBJ_PATH)\$(O)\$(INF_PREVIEW_NAME).inf: $(INF_PREVIEW_TEMPLATE)
	$(_CMD_TAGEV) $(INF_PREVIEW_TEMPLATE) $@
	COPY /Y $@ "$(G_TARGET_OUTPUT_ABS_DIR)\$(INF_PREVIEW_NAME).inf"
