TARGETNAME = xfer-async-rw
USBK_TARGET_LIB = ..\..\bin\lib\$(_BUILDARCH)\libusbK.lib

WDK_OUTPUT_SUBDIR=$(_BUILDARCH)
!IF "$(_BUILDARCH)"=="x86"
WDK_OUTPUT_SUBDIR=i386
!ENDIF

TARGETTYPE = PROGRAM
USE_MSVCRT = 1
UMTYPE     = console

!IFNDEF MSC_WARNING_LEVEL
MSC_WARNING_LEVEL=/W3
!ENDIF

C_DEFINES=$(C_DEFINES)

TARGETLIBS=$(SDK_LIB_PATH)\kernel32.lib \
           $(SDK_LIB_PATH)\advapi32.lib \
           $(SDK_LIB_PATH)\user32.lib \
		   $(USBK_TARGET_LIB)
		   
INCLUDES	=.\;..\;..\..\includes\;
SOURCES		=xfer-async-rw.c ..\examples.c
